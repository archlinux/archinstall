# http://editorconfig.org
# See coding conventions in CONTRIBUTING.md
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.py]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.json]
indent_size = 4
indent_style = tab

[{*.yml, *.yaml}]
indent_size = 2
